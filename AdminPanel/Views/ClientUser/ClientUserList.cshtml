@using AdminPanel.Models
@model List<ClientUser>
@{
    ViewBag.Title = "ClientUserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">
    <div class="row">

        <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    List Customer From Database
                </div>
                <div class="panel-body">

                    <div class="table-responsive">
                        <table cellpadding="1" cellspacing="1" class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Birthday</th>
                                    <th>Address</th>
                                    <th>Control</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ClientUser clientUser in Model)
                                {
                                    <tr>
                                        <td>@clientUser.ClientUserId</td>
                                        <td>@clientUser.firstName</td>
                                        <td>@clientUser.lastName</td>
                                        <td>@clientUser.emailAddress</td>
                                        <td>@clientUser.phoneNumber</td>
                                        <td>@clientUser.birthday</td>
                                        <td>@clientUser.address</td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteClientUser", "ClientUser", new { id = clientUser.ClientUserId })"><i class="fa fa-trash-o"></i>&nbsp;Del</a>
                                        </td>
                                    </tr>

                                }
                                
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="panel-footer">
                    Table - @ViewBag.Count rows
                </div>
            </div>
        </div>
    </div>
</div>