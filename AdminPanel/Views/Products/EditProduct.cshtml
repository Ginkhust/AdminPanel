@using AdminPanel.Models
@model Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">

    <div class="row">
        <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Edit Product into Store
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("EditProduct", "Products", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary()
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Title</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mTitle, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Price</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mPrice, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Quantity</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mQuantity, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Manufacture</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mManufacture, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">ROM</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mROM, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Memory Card</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mMemoryCard, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Camera</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mCamera, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Weight</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mWeight, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Sale Price</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mSalePrice, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Old Price</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mOldPrice, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Size</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mSize, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Connection Port</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mConnectionPort, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Screen Size</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mScreenSize, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Screen Resolution</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mScreenResolution, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">RAM</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mRAM, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Pin</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mPin, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">CPU</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mCPU, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Guarantee</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.mGuarantee, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Images</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.image.titleImage, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-4"></div>
                                <div class="col-sm-4">
                                    <input class="btn btn-md btn-success" type="submit" style="width:100%" value="Change Data" />
                                </div>
                                <div class="col-sm-4">
                                    <a class="btn btn-md btn-info" type="button" href="@Url.Action("ProductsList", "Products")" style="width:100%">Back</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

