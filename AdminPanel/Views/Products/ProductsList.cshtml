@using AdminPanel.Models
@model List<Product>
@{
    ViewBag.Title = "ProductsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content animate-panel">
    <div class="row">

        <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    List Users From Database
                </div>
                <div class="panel-body">

                    <div class="table-responsive">
                        <table cellpadding="1" cellspacing="1" class="table">
                            <thead>
                                <tr>
                                    <th>PID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Screen Resolution</th>
                                    <th>Screen Size</th>
                                    <th>RAM</th>
                                    <th>Pin</th>
                                    <th>CPU</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i <Model.Count ; i++)
                                {
                                    <tr>
                                        <td>@Model[i].ObjectId</td>
                                        <td>@Model[i].mTitle</td>
                                        <td>@Model[i].mPrice</td>
                                        <td>@Model[i].mQuantity</td>
                                        <td>@Model[i].mScreenResolution</td>
                                        <td>@Model[i].mScreenSize</td>
                                        <td>@Model[i].mRAM</td>
                                        <td>@Model[i].mPin</td>
                                        <td>@Model[i].mCPU</td>
                                        <td><img src="@Model[i].image.titleImage" alt="none" class="img-rounded"/></td>
                                        <td>
                                            <a type="button" href="@Url.Action("EditUser", "Users", new {id = Model[i].ObjectId})" class="btn btn-info btn-sm"><i class="fa fa-pencil-square-o"></i>&nbsp;Edit</a>&nbsp;
                                            <a type="button" class="btn btn-danger btn-sm" href="/Users/DeleteUser"><i class="fa fa-trash-o"></i>&nbsp;Del</a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="panel-footer">
                    Table - @ViewBag.Count rows
                </div>
            </div>
        </div>
    </div>
</div>

