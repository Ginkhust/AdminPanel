@using AdminPanel.Models
@model ServerUserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    @Styles.Render("~/Styles/css")
</head>
<body>
    <div class="color-line"></div>
    <div class="back-link">
        <a href="index-2.html" class="btn btn-primary">Back to Dashboard</a>
    </div>
    <div class="register-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h3>Registration</h3>

                </div>
                <div class="hpanel">
                    <div class="panel-body">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "loginForm" }))
                        {
                            <div class="row">
                                <div class="form-group col-lg-12">
                                    <label>Username</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Repeat Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Email Address</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Repeat Email Address</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>

                                <div class="checkbox col-lg-12">
                                    @Html.DropDownListFor(m => m.Role.name,
                                    new SelectList(
                                        new[]
                                        {
                                            "Administrator",
                                            "Stock Manager",
                                            "Shipper"
                                        }
                                        )
                                    , new { @class = "form-control" }
                                    )
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" class="btn btn-success" value="REGISTER" />
                                <button class="btn btn-default">Cancel</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <strong>HOMER</strong> - AngularJS Responsive WebApp <br /> 2015 Copyright Company Name
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/js")
</body>
</html>
