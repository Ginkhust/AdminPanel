@using AdminPanel.Models
@model News
@{
    ViewBag.Title = "Edit News";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="//cdn.ckeditor.com/4.5.4/full/ckeditor.js"></script>
}
<div class="content animate-panel">
    <div class="row">

        <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Edit News @ViewBag.o
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditNews", "News", FormMethod.Post))
                    {
                        <label>Title</label>
                        @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
                        <br />
                        @Html.TextAreaFor(m => m.content, new { @class = "ckeditor" })
                        <br />
                        <input type="submit" class="btn btn-block btn-success" value="Edit News"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
