@using AdminPanel.Models
@model List<News>
@{
    ViewBag.Title = "ShowNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content animate-panel">
    <div class="row">

        <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
            @foreach (News n in Model)
            {
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        @n.title
                    </div>
                    <div class="panel-body">
                        @Html.Raw(n.content)
                    </div>
                    <div class="panel-footer">
                        <div class="row">

                            <div class="col-md-3">
                                <a class="btn btn-block btn-success" href="@Url.Action("EditNews", "News", new { id = n.NewsId })" style="width: 100%"><i class="fa fa-edit"></i>&nbsp;Edit</a>
                                <br /><br />
                            </div>

                            <div class="col-md-3">
                                <a class="btn btn-block btn-danger" href="@Url.Action("DeleteNews", "News", new { id = n.NewsId })" style="width: 100%"><i class="fa fa-times"></i>&nbsp;Delete</a>

                            </div>

                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>